<!--Incluir _Header-->
<%- include ("include/_header") %>
<!--Close Incluir Header-->
    <!--Sección Principal-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav dflex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>Todos los vinos</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Editar Vino</h2>
                <span class="text-light">Ingrese los datos en el formulario para editar el vino</span>
            </div>
            <!--Agregamos el formulario-->
            <!--Formulario-->
            <form method="POST" id="update_vino">
                <div class="nuevo_vino">
                    <div class="form-group">
                        <label for="Codigo" class="text-light">C&oacute;digo: </label>
                        <input type="text" name="codigo" value="<%= vino.codigo%>" placeholder="25000">
                    </div>
                    <div class="form-group">
                        <label for="Marca" class="text-light">Marca: </label>
                        <input type="text" name="marca" value="<%= vino.marca%>" placeholder="Trumpeter Reserve">
                    </div>
                    <div class="form-group">
                        <label for="Nombre" class="text-light">Nombre: </label>
                        <input type="text" name="nombre" value="<%= vino.nombre%>" placeholder="Trumpeter Reserve Blend">
                    </div>
                    <div class="form-group">
                        <label for="Uva" class="text-light">Uva: </label>
                        <input type="text" name="uva" value="<%= vino.uvas%>" placeholder="Malbec, Cabernet Sauvignon">
                    </div>
                    <div class="form-group">
                        <label for="Año" class="text-light">Año: </label>
                        <input type="text" name="año" value="<%= vino.anio%>" placeholder="2020">
                    </div>
                    <div class="form-group">
                        <label for="Contenido" class="text-light">Contenido: </label>
                        <div class="radio inline">
                            <input type="radio" id="radio-1" name="contenido" value="375 ml" <%= vino.contenido == '375 ml'?'checked': '' %>>
                            <label for="radio-1" class="radio-label">375 ml</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="contenido" value="750 ml" <%= vino.contenido == '750 ml'?'checked': '' %>>
                            <label for="radio-2" class="radio-label">750 ml</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Cantidad" class="text-light">Cantidad: </label>
                        <input type="number" name="cantidad" value="<%= vino.cantidad%>" placeholder="6" min="0" max="25">
                    </div>
                    <div class="form-group">
                        <label for="Precio Caja" class="text-light">Precio Caja: $</label>
                        <input type="text" name="precio caja" value="<%= vino.PrecioCaja%>" placeholder="3600">
                    </div>
                    <div class="form-group">
                        <label for="Precio Individual" class="text-light">Precio Individual: $</label>
                        <input type="text" name="precio individual" value="<%= vino.PrecioIndividual%>" placeholder="600">
                    </div>
                    <div class="form-group">
                        <label for="Precio Caja Aumento" class="text-light">Precio Caja: $</label>
                        <input type="text" name="precio caja aumento" value="<%= vino.PrecioCajaAumento%>" placeholder="4000">
                    </div>
                    <div class="form-group">
                        <label for="Precio Individual Aumento" class="text-light">Precio Individual: $</label>
                        <input type="text" name="precio individual aumento" value="<%= vino.PrecioIndividualAumento%>" placeholder="700">
                    </div>
                    <div class="form-group">
                        <label for="Precio Publicado" class="text-light">Precio Publicado: $</label>
                        <input type="text" name="precio publicado" value="<%= vino.PrecioPublicado%>" placeholder="750">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Guardar Vino</button>
                    </div>
                </div>
            </form>
            <!--Close Formulario-->
        </div>
    </main>
    <!--Close Sección Principal-->
<!--Incluir _Footer-->
<%- include ("include/_footer") %>
<!--Close Incluir _Footer-->